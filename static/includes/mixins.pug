                +team_member("Lam Hoang", "Graphic Design") 
                +team_member("Pixel", "Graphic Design") 
                +team_member("Ha Nguyen", "CEO-shialthemes") 
                +team_member("Whoever", "Out of Job") 
            +glider_prev()
            +glider_next()

mixin sponser(name)
    img.sponser(src="../assets/sponsers/"+name+".png", alt="sponser")

mixin sponsers()
    .sponsers.container
        -for (var i = 1; i <= 5; i++)
            +sponser(i)

mixin project(name, type)
    .project 
        .name.all-caps=name 
        .type= "-" + type + "-"

mixin portfolio-items(show_more=true)
    .portfolio-items
        -for (var i = 1; i <= 7; i++)
            +project("Project #"+i, "graphic design")
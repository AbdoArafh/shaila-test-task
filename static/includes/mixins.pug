    .container.our-team
        .cool-title Our team of professionals 
        .funny-note 6 people is all we need here apparently.
        .glider-contain 
            .glider
                +team_member("Shail", "CEO-shialthemes") 
                +team_member("Abdurrahman", "Front-End Developer") 
                +team_member("Lam Hoang", "Graphic Design") 
                +team_member("Pixel", "Graphic Design") 
                +team_member("Ha Nguyen", "CEO-shialthemes") 
                +team_member("Whoever", "Out of Job") 
            +glider_prev()
            +glider_next()

mixin sponser(name)
    img.sponser(src="../../resources/sponsers/"+name+".png", alt="sponser")

mixin sponsers()
    link(rel="stylesheet", href="../../css/sponsers.css")
    .sponsers.container
        -for (var i = 1; i <= 5; i++)
            +sponser(i)
